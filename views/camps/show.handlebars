<div class="">
  {{camp.name}}:
  {{camp.dates}}
</div>
<form method="post" action="/bookings/book">

   <div class="form-group">
    <label>Attendees Name</label>
    <input type="text" class="form-control" placeholder="Name of person attending camp" name="attendee_name">
  </div>
  <div class="form-group">
   <label>Parent/Guardian Contact Name</label>
   <input type="text" class="form-control" placeholder="Parent Guardian name" name="pg_name">
 </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" placeholder="Address" name="address">
  </div>
  <div class="form-group">
    <label>Contact Telephone</label>
    <input type="text" class="form-control" placeholder="Contact Telephone" name="contact_number">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" class="form-control" placeholder="Contact Email" name="booking_email">
  </div>
  <div class="form-group">
    <label>Special Information</label>
    <input type="text" class="form-control" placeholder="Dietry requirements etc." name="special_information">
  </div>
  <div class="form-group">
    <!-- <label>Special Information</label> -->
    <input type="hidden" class="form-control" value="{{user.id}}" name="user_id">
    <input type="hidden" class="form-control" value="{{user.username}}" name="username">
    <input type="hidden" class="form-control" value="{{user.email}}" name="user_email">
    <input type="hidden" class="form-control" value="{{user.name}}" name="name_of_user">
    <input type="hidden" name="camp_name" value="{{camp.name}}">
    <input type="hidden" name="camp_id" value="{{camp._id}}">
    <input type="hidden" name="camp_date" value="{{camp.dates}}">



  </div>
  <button type="submit" class="btn btn-default">Book</button>
</form>
